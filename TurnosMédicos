class SistemaTurnosMedicos:
    def __init__(self):
        self.cola_pacientes = []    
    def agregar_paciente(self):
        """Agrega un nuevo paciente al final de la cola"""
        print("   AGREGAR NUEVO PACIENTE")
        nombre = input("Nombre del paciente: ").strip().title()
        # Validar edad
        while True:
            try:
                edad = int(input("Edad del paciente: "))
                if edad <= 0 or edad > 120:
                    print("‚ùå Por favor ingresa una edad v√°lida (1-120)")
                    continue
                break
            except ValueError:
                print("‚ùå Por favor ingresa un n√∫mero v√°lido para la edad")
        print("\nEspecialidades disponibles:")
        print("1. Pediatr√≠a")
        print("2. Cl√≠nica M√©dica")
        print("3. Cardiolog√≠a")
        print("4. Traumatolog√≠a")
        print("5. Dermatolog√≠a")
        # Validar especialidad
        while True:
            try:
                opcion = int(input("\nSelecciona la especialidad (1-5): "))
                if 1 <= opcion <= 5:
                    especialidades = {
                        1: "Pediatr√≠a",
                        2: "Cl√≠nica M√©dica", 
                        3: "Cardiolog√≠a",
                        4: "Traumatolog√≠a",
                        5: "Dermatolog√≠a"
                    }
                    especialidad = especialidades[opcion]
                    break
                else:
                    print("‚ùå Por favor selecciona una opci√≥n v√°lida (1-5)")
            except ValueError:
                print("‚ùå Por favor ingresa un n√∫mero v√°lido")
        # Crear tupla del paciente y agregar a la cola
        paciente = (nombre, edad, especialidad)
        self.cola_pacientes.append(paciente)
        print(f"Paciente {nombre} agregado exitosamente!")
        print(f"   üìã Turno: {len(self.cola_pacientes)} | Especialidad: {especialidad}")
    def atender_paciente(self):
        """Atiende al primer paciente en la cola"""
        if not self.cola_pacientes:
            print("No hay pacientes en espera")
            return
        paciente = self.cola_pacientes.pop(0)
        nombre, edad, especialidad = paciente
        print("   ATENDIENDO PACIENTE")
        print(f"Nombre: {nombre}")
        print(f"Edad: {edad} a√±os")
        print(f"Especialidad: {especialidad}")
        print(f"{nombre} ha sido atendido exitosamente!")
        if self.cola_pacientes:
            print(f"Pacientes restantes en espera: {len(self.cola_pacientes)}")
    def mostrar_pacientes(self):
        """Muestra todos los pacientes en espera"""
        if not self.cola_pacientes:
            print("La cola de espera est√° vac√≠a")
            return
        print("   PACIENTES EN ESPERA")
        for i, paciente in enumerate(self.cola_pacientes, 1):
            nombre, edad, especialidad = paciente
            print(f"{i}.{nombre} | {edad} a√±os | {especialidad}")
        print(f"Total de pacientes en espera: {len(self.cola_pacientes)}")
    def mostrar_menu(self):
        """Muestra el men√∫ principal"""
        print("   SISTEMA DE TURNOS M√âDICOS")
        print("1. Agregar paciente")
        print("2. Atender siguiente paciente") 
        print("3. Ver pacientes en espera")
        print("4. Salir")
    def ejecutar(self):
        """Ejecuta el sistema principal"""
        print("¬°Bienvenido al Sistema de Turnos M√©dicos!")
        while True:
            self.mostrar_menu()
            try:
                opcion = int(input("\nSelecciona una opci√≥n (1-4): "))
                if opcion == 1:
                    self.agregar_paciente()
                elif opcion == 2:
                    self.atender_paciente()
                elif opcion == 3:
                    self.mostrar_pacientes()
                elif opcion == 4:
                    print("¬°Gracias por usar el Sistema de Turnos M√©dicos!")
                    print("¬°Hasta pronto!")
                    break
                else:
                    print("‚ùå Opci√≥n no v√°lida. Por favor selecciona 1-4")
            except ValueError:
                print("‚ùå Por favor ingresa un n√∫mero v√°lido (1-4)")
# Ejecutar el sistema
if __name__ == "__main__":
    sistema = SistemaTurnosMedicos()
    sistema.ejecutar()
